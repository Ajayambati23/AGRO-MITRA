# AgroMitra Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/agromitra
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/agromitra

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
# Generate a strong secret key for JWT token signing

# Admin Dashboard Credentials
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin

# OpenAI Configuration (Optional - for GPT integration)
OPENAI_API_KEY=your_openai_api_key_here
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_MARKET_MODEL=gpt-4o-mini

# Twilio Configuration (Optional - for SMS notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number
# Get credentials from: https://console.twilio.com/

# Email Configuration (Optional - for email notifications)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password
# Use App Password for Gmail: https://support.google.com/accounts/answer/185833
# Optional custom SMTP settings (leave empty for Gmail service preset)
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_SECURE=false

# Weather API (Optional - for weather integration)
WEATHER_API_KEY=your_weather_api_key_here
# Get API key from: https://openweathermap.org/api

# Agmarknet / Data.gov market price API
AGMARKNET_API_KEY=your_data_gov_api_key_here
AGMARKNET_TIMEOUT_MS=12000
AGMARKNET_RETRIES=1

# Application Configuration
NODE_ENV=development
PORT=3000

# File Upload Configuration
MAX_FILE_SIZE=10485760
# 10MB in bytes

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100
# Maximum requests per window

# AI Model Configuration
AI_MODEL_OPENAI_ENABLED=true
AI_MODEL_LOCAL_ENABLED=true
AI_MODEL_DEFAULT=openai
# Options: 'openai', 'local', 'hybrid'

# Training Configuration
TRAINING_AUTO_RETRAIN=true
TRAINING_DATA_PATH=./models/trained-model.json
TRAINING_BACKUP_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
# Options: error, warn, info, debug

# CORS Configuration
CORS_ORIGIN=*
# For production, specify your domain: https://yourdomain.com

# Security Configuration
BCRYPT_ROUNDS=12
# Number of rounds for password hashing

# Session Configuration
SESSION_SECRET=your_session_secret_here
# Generate a strong secret for session management

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Feature Flags
FEATURE_VOICE_ENABLED=true
FEATURE_NOTIFICATIONS_ENABLED=true
FEATURE_TRAINING_ENABLED=true
FEATURE_CALENDAR_ENABLED=true
FEATURE_MARKET_PRICES_ENABLED=true

# Notification Scheduler
# Option 1: Repeated schedule (every N minutes)
REMINDER_EVERY_MINUTES=5
OVERDUE_EVERY_MINUTES=5

# Option 2: Particular daily time (24h format HH:MM), example 09:30
# If set, this overrides *_EVERY_MINUTES for that job.
REMINDER_DAILY_TIME=
OVERDUE_DAILY_TIME=

# Advanced fallback: custom cron (used only if above options are not set)
REMINDER_CHECK_CRON=*/5 * * * *
OVERDUE_CHECK_CRON=*/5 * * * *
# Optional timezone, e.g. Asia/Kolkata
ALERTS_TIMEZONE=Asia/Kolkata

# Development Configuration
DEBUG_MODE=false
HOT_RELOAD=true
VERBOSE_LOGGING=false

# Production Configuration (uncomment for production)
# NODE_ENV=production
# DEBUG_MODE=false
# HOT_RELOAD=false
# VERBOSE_LOGGING=false
# CORS_ORIGIN=https://yourdomain.com
